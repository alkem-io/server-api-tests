{
  "name": "@cherrytwist/server-api-tests",
  "version": "0.0.1",
  "description": "Cherrytwist system level API / integration tests",
  "author": "Cherrytwist Foundation",
  "private": false,
  "license": "EUPL-1.2",
  "main": "src/main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherrytwist/server-api-tests.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
    "lint:prod": "tsc --noEmit && cross-env NODE_ENV=production eslint src/**/*.ts{,x}",
    "lint:fix": "tsc --noEmit && eslint src/**/*.ts{,x} --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --runInBand --config ./test/config/jest.config.e2e.js",
    "test:it": "jest --forceExit --detectOpenHandles --isolatedModules=true --runInBand   --config ./test/config/jest.config.it.js",
    "test:ut": "jest --detectOpenHandles --runInBand --config ./test/config/jest.config.js",
    "test:nightly": "jest --forceExit --maxWorkers=2 --config ./test/config/jest.config.nightly.js",
    "test:ci": "jest --forceExit --runInBand --config ./test/config/jest.config.ci.js"
  },
  "dependencies": {
    "@alkemio/client-lib": "^0.7.8",
    "@types/express-session": "^1.17.3",
    "axios": "^0.21.1",
    "cross-env": "^7.0.3",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^6.2.6",
    "graphql-type-json": "^0.3.2"
  },
  "devDependencies": {
    "@types/cache-manager": "^3.4.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^4.0.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^13.13.52",
    "@types/supertest": "^2.0.8",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "coveralls": "^3.1.0",
    "dotenv": "^10.0.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "26.4.2",
    "lint-staged": "^10.5.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.9"
  },
  "_moduleAliases": {
    "@src": "./dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
