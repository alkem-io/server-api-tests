{
  "name": "@alkemio/test-suites",
  "version": "0.1.0",
  "description": "Alkemio system level API / integration tests",
  "author": "Cherrytwist Foundation",
  "private": false,
  "license": "EUPL-1.2",
  "main": "src/main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkemio/test-suites.git"
  },
  "scripts": {
    "ts:watch": "tsc --noEmit --watch",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "circular-dependencies": "madge --circular dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
    "lint:prod": "tsc --noEmit && cross-env NODE_ENV=production eslint src/**/*.ts{,x}",
    "lint:fix": "tsc --noEmit && eslint src/**/*.ts{,x} --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "jest",
    "test:ui": "jest --detectOpenHandles --runInBand --config ./test/config/jest.config.ts",
    "stop-process": "fuser 4000/tcp -k",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:auth-playwright": "playwright test"
  },
  "dependencies": {
    "@alkemio/client-lib": "^0.32.0",
    "@ory/kratos-client": "^1.2.1",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^16.0.1",
    "graphql-ws": "^5.8.2",
    "typescript": "~5.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/import-types-preset": "^2.2.3",
    "@graphql-codegen/typed-document-node": "^2.3.3",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-graphql-request": "^4.5.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@playwright/test": "^1.45.2",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^16.4.6",
    "@types/puppeteer": "^5.4.4",
    "@types/supertest": "^2.0.11",
    "coveralls": "^3.1.0",
    "dotenv": "^16.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "graphql-request": "^3.3.0",
    "husky": "^4.3.8",
    "jest-html-reporters": "^3.1.7",
    "lint-staged": "^10.5.4",
    "prettier": "^3.4.2",
    "supertest": "^6.2.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.7",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@src": "./src"
  },
  "husky": {

  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.5"
  }
}
