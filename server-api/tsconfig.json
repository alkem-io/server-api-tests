{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@generated/*": ["src/core/generated/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"],
      "@functional-api/*": ["src/functional-api/*"],
      "@src/*": ["src/*"]
    }
  }
}
